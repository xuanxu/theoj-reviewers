<%= link_to "Home", root_path %>

<h1><%= image_tag @user.github_avatar_url, width: '50px' %> User profile</h1>

<div>
  Github: <%= @user.github %>
  <% if @user.orcid %>
    Orcid: <%= @user.orcid %>
  <% else %>
    <%= link_to "Add your ORCID", "/auth/orcid", method: :post %>
  <% end %>
</div>

<%= form_for(@user, url: profile_path, method: :put) do |f| %>
  <div>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this editor from being saved:</h2>
        <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.attribute.to_s.humanize %>: <%= error.message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :affiliation %>
    <%= f.text_field :affiliation %>
  </div>

  <div>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>

  <div>
    <%= f.label :twitter %>
    <%= f.text_field :twitter %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 4 %>
  </div>

  <div>
    <%= f.submit "Save profile" %>
  </div>
<% end %>
